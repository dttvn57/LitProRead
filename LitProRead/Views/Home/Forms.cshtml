                        var more = (page * pageSize) < data.Total;
                        return { results: data.Results, more: more };
                    }
                }
            });

            $("#StudentListFirstName")
                .on("change", function (e) {
                    currentStudentId = e.val;
                    //alert(currentStudentId);
                })

        });
    </script>


